    <style name="Base.Theme.Passwordsecurity" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorSurfaceContainerLow">@color/surfaceLow</item>
        <item name="android:windowBackground">@color/activityBackgroundLight</item>
        <item name="android:fontFamily">@font/roboto_family</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorSurface">@color/secondary</item>
